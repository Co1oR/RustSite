@model List<ApplicationDomain.Product>


<div class="container-fluid p-0" style="min-height: 100vh; background-image: url('https://static.vecteezy.com/system/resources/previews/007/210/109/non_2x/abstract-background-modern-technology-banner-digital-backdrop-cover-graphic-template-wallpaper-free-photo.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <main role="main" class="text-white p-2 d-flex justify-content-center" style="background: rgba(0, 0, 0, 0.5); min-height: 100vh;">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-9">
                    <div class="container d-flex flex-column gap-3 rounded-3 p-4" style="background-color: #0c0c1c;">
                        <div class="d-flex gap-3">
                            <a class="text-white rounded-3 btn-custom btn-link text-decoration-none" href="#">
                                Всі
                            </a>
                            <a class="text-white rounded-3 btn-custom btn-link text-decoration-none" href="#">
                                Привілегії
                            </a>
                            <a class="text-white rounded-3 btn-custom btn-link text-decoration-none" href="#">
                                Інше
                            </a>
                            <a class="text-white rounded-3 btn-custom btn-link text-decoration-none" href="#">
                                Зброя
                            </a>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-black" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="row row-cols-1 row-cols-md-4 g-4">
                            @foreach (var item in Model)
                            {
                                <div class="col">
                                    <div class="card product-card text-white">
                                        <div class="card-body">
                                            <h5 class="card-title">@item.Name</h5>
                                            <p class="card-text">@item.Description</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span>@item.Cost руб.</span>
                                                <a href="#" class="btn btn-sm">Перейти</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
                <div class="col-md-3 d-flex flex-column gap-3">
                    <div class="container rounded-3 p-3" style="background-color: #0c0c1c;">
                        <p style="font-size: 16px; margin-bottom: 4px;">Clear Rust</p>

                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-1">
                            <p class="text-muted mb-0" style="font-size: 14px;">100/200</p>
                            <a href="#"><i class="bi bi-link-45deg"></i></a>
                        </div>
                    </div>
                    <div class="container rounded-3 p-4 d-flex flex-column justify-content-center gap-2" style="background-color: #0c0c1c;">
                        <p class="mb-1 text-white" style="font-size: 14px;">
                            <i class="bi bi-gift me-1"></i> Активуй промокод
                        </p>

                        <p class="text-muted mb-2" style="font-size: 13px;">
                            І отримуй приємний бонус
                        </p>

                        <div class="bg-black text-center rounded-2 py-2">
                            <h5 class="mb-0 text-white" style="font-weight: bold;">WeAreOpen</h5>
                        </div>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <p class="text-muted mt-1 text-center mb-0" style="font-size: 11px;">
                                Війдіть в акаунт, щоб отримати бонус
                            </p>
                        }
                    </div>
                    <div class="container rounded-3 p-4 d-flex flex-column justify-content-center gap-2" style="background-color: #0c0c1c;">
                        <p class="m-0 text-white" style="font-size: 14px;">
                            <i class="bi bi-discord me-1"></i> Очікуємо на вас в Discord!
                        </p>

                        <p class="text-muted mb-1" style="font-size: 13px;">
                            Пошук тімейтів, чати і допомога по грі
                        </p>

                        <div class="d-flex align-items-center gap-2">
                            <i class="bi bi-people text-white"></i>
                            <div class="bg-secondary text-white text-center rounded-3 px-2 py-1" style="font-size: 12px;">
                                Більше 450 учасників
                            </div>
                        </div>

                        <button type="button" class="btn btn-primary btn-sm w-100 mt-2">
                            Перейти
                        </button>
                    </div>
                    <div class="container rounded-3 p-4 d-flex flex-column justify-content-center gap-2" style="background-color: #0c0c1c;">
                        <p><i class="bi bi-fire"></i> Бонуси при поповненні</p>
                        <div class="d-flex flex-column gap-2">
                            <div class="d-flex mb-2">
                                <div class="text-white text-center py-2 rounded-start" style="background-color: #1a1a2e; width: 50%;">100 грн</div>
                                <div class="text-white text-center py-2 rounded-end flex-grow-1" style="background: linear-gradient(90deg, #7a2cf5, #9b38f6);">бонус 15%</div>
                            </div>

                            <div class="d-flex mb-2">
                                <div class="text-white text-center py-2 rounded-start" style="background-color: #1a1a2e; width: 50%;">250 грн</div>
                                <div class="text-white text-center py-2 rounded-end flex-grow-1" style="background: linear-gradient(90deg, #7a2cf5, #9b38f6);">бонус 20%</div>
                            </div>

                            <div class="d-flex mb-2">
                                <div class="text-white text-center py-2 rounded-start" style="background-color: #1a1a2e; width: 50%;">500 грн</div>
                                <div class="text-white text-center py-2 rounded-end flex-grow-1" style="background: linear-gradient(90deg, #7a2cf5, #9b38f6);">бонус 25%</div>
                            </div>

                            <div class="d-flex">
                                <div class="text-white text-center py-2 rounded-start" style="background-color: #1a1a2e; width: 50%;">1000 грн</div>
                                <div class="text-white text-center py-2 rounded-end flex-grow-1" style="background: linear-gradient(90deg, #7a2cf5, #9b38f6);">бонус 30%</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
